{
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  
  // ====== PERFORMANCE OPTIMIZATIONS ======
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.maxCompleteItemCount": 10,
  "suggest.timeout": 1000,
  "suggest.enablePreview": false,
  "suggest.noselect": true,
  "suggest.detailMaxLength": 50,
  "suggest.labelMaxLength": 60,
  "suggest.snippetIndicator": "â–º",
  
  // ====== DIAGNOSTICS OPTIMIZATION ======
  "diagnostic.checkCurrentLine": false,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.virtualText": false,
  "diagnostic.displayByAle": false,
  "diagnostic.maxWindowHeight": 10,
  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  
  // ====== TYPESCRIPT/JAVASCRIPT ======
  "tsserver.enable": true,
  "tsserver.preferences.includePackageJsonAutoImports": "off",
  "tsserver.preferences.importModuleSpecifier": "relative",
  "tsserver.enableJavascript": true,
  "tsserver.organizeImportsOnFormat": false,
  "typescript.format.enable": false,
  "typescript.preferences.organizeImports": false,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.autoClosingTags": false,
  "javascript.format.enable": false,
  "javascript.preferences.organizeImports": false,
  
  // ====== FORMATTING DISABLED COMPLETELY ======
  "coc.preferences.formatOnSave": false,
  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.formatOnType": false,// ====== FORMATTING ======
  "prettier.enable": false,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 80,
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "avoid",
  "prettier.endOfLine": "lf",
  "prettier.onlyUseLocalVersion": true,
  "prettier.requireConfig": true,
  "eslint.format.enable": false,
  "eslint.autoFixOnSave": false,
  
  // ====== AUTO-SAVE DISABLED ======
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json"],
  "suggest.autoTrigger": "always",
  "coc.source.file.trimSameExts": [],
  
  "workspace.ignoredFolders": [
    "**/.git/**",
    "**/out/**",
    "**/.next/**",
    "**/coverage/**"
  ],
  "workspace.bottomUpFiletypes": [
    "javascript",
    "typescript",
    "json"
  ],
  
  "signature.enable": false,
  "hover.target": "preview",
  "coc.preferences.currentFunctionSymbolAutoUpdate": false,
  "list.maxHeight": 15,
  "codeAction.showActionKind": false,
  
  // ====== LANGUAGE SERVER CONFIGS ======
  "languageserver": {},
  
  "extensions.updateCheck": "never",
  "coc.preferences.extensionUpdateCheck": "never"
}
